<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".ui.fragment.VerificationPhoneFragment">

        <EditText
            android:id="@+id/ed_phone"
            android:background="@drawable/custon_edit_text_in_verification"
            android:elevation="5dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_OTP"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#663695"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_verification"
            app:layout_constraintBottom_toTopOf="@id/ed_phone"
            app:layout_constraintLeft_toLeftOf="@id/ed_phone"
            app:layout_constraintRight_toRightOf="@id/ed_phone" />
        <TextView
            android:id="@+id/tv_note"
            android:text="@string/text_enter"
            android:textColor="#8658A4"
            android:letterSpacing="0.03"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/ed_phone"
            app:layout_constraintRight_toRightOf="@id/ed_phone"
            app:layout_constraintTop_toBottomOf="@id/ed_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_get_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_btn_get_otp"
            android:backgroundTint="#663695"
            android:text="Get OTP"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/ed_phone"
            app:layout_constraintRight_toRightOf="@id/ed_phone"
            app:layout_constraintTop_toBottomOf="@id/tv_note" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>